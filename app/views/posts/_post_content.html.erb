<div class="modal-body">
  <% post.fonts.each do |font| %>
    <%= font.name %>
  <% end %>
  <%= post&.website %>
  <%= cl_image_tag post.photo&.key %>

  <% if related_posts.present? %>
   <h3>Related Posts</h3>
    <% related_posts.each do |post| %>
      <%= post.website %>
    <% end %>
    <% post.tag_list.each do |tag| %>
      <%= link_to tag, tagged_path(tag: tag) %>
    <% end %>
  <% end %>
</div>
