<%= simple_form_for(@post) do |f| %>
  <%= f.input :website %>
  <%= f.input :url %>
  <%= f.association :fonts, as: :check_boxes %>
<%= f.button :submit,  "Add" %>
<% end %>



<% if @posts %>
  <% @posts.each do |post| %>
    <%= post.website %>
    <%= post.url %>
    <% if post.fonts.present? %>
      <% post.fonts.each do |font| %>
        <%= font.name %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
