<%= simple_form_for(@post) do |f| %>
  <%= f.input :website %>
  <%= f.input :url %>
  <%= f.input :photo, as: :file %>
  <%= f.association :fonts, as: :check_boxes %>
  <%= f.simple_fields_for :fonts do |p| %>
    <%= p.input :name %>
  <% end %>
<%= f.button :submit,  "Add" %>
<% end %>



<% if @posts %>
  <% @posts.each do |post| %>
    <%= post.website %>
    <%= post.url %>
    <% if post.photo.attached? %>
      <%= cl_image_tag post.photo.key %>
    <% end %>
    <% if post.fonts.present? %>
      <% post.fonts.each do |font| %>
        <%= font.name %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
