<% end %>

<section class="content">
  <% if @posts %>
  <div class="grid" id="posts">
    <div class="grid-sizer"></div>
      <%= render 'post', posts: @posts %>
  </div>
  <% end %>
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
</section>

