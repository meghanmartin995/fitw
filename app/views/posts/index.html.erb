</header>
<section class="content">
  <% if @posts %>
  <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 398 }'>
    <% @posts.each do |post| %>
      <% if post.photo.attached? %>
      <div class="grid-item"><%= cl_image_tag post.photo.key %>
      <% if post.fonts.present? %>
        <% post.fonts.each do |font| %>
           <p> <%= font.name.capitalize %> </p>
        <% end %>
      <% end %>
      </div>

    <% end %>
    <% end %>
    </div>
  <% end %>
</section>

<% if @pg_results %>
  <% @pg_results.each do |result| %>
    <% if result.searchable_type == 'Post' %>
      <% post = result.searchable %>
      <%= post.website %>
      <%= post.website %>
      <% post.fonts.each do |font| %>
        <%= font.name %>
      <% end %>
    <% else %>
      <% font = result.searchable %>
      <% font.posts.each do |post| %>
        <%= post.website %>
        <%= post.url %>
        <%= font.name %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

