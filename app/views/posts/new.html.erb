<%= simple_form_for(@post) do |f| %>
  <%= f.input :website %>
  <%= f.input :url %>
  <%= f.input :photo, as: :file %>
  <%= f.association :tag %>
  <%= f.association :fonts, as: :check_boxes %>
  <%= f.simple_fields_for :fonts do |pp| %>
    <%= pp.input :name %>
  <% end %>
<%= f.button :submit,  "Add" %>
<% end %>
